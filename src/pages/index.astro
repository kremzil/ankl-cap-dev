---
import { getCollection } from "astro:content";
import BlogCard from "@/components/blog/BlogCard.astro";
import CompanySlider from "@/components/company/CompanySlider.astro";
import HeroSection from "@/components/landing-page/HeroSection.astro";
import LatestSection from "@/components/landing-page/LatestSection.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "@/consts";
import MainLayout from "@/layouts/MainLayout.astro";

const allPosts = (await getCollection("blogs"))
  .map((post) => ({
    id: post.id,
    title: post.data.title,
    description: post.data.description,
    pubDate: post.data.pubDate,
    tags: post.data.tags,
    updatedDate: post.data.updatedDate,
    author: post.data.author,
    metadata: post.data.metadata,
  }))
  .sort((a, b) => b.pubDate.valueOf() - a.pubDate.valueOf());

const posts = allPosts.slice(0, 3);

const companies = [
  {
    id: "shark",
    title: "Shark",
    tags: ["retail", "experiments", "innovation"],
    description:
      "Shark realizuje rôzne projekty a zastrešuje viaceré značky v rámci skupiny ANKL Cap.",
    links: [
      "https://www.printexpert.sk",
      "https://www.inzero.sk",
      "https://www.shark.sk",
      "https://www.moodbooster.sk",
      "https://www.j4ff.sk",
      "https://www.ticketke.sk",
      "https://www.pkosice.sk",
      "https://www.hypotekarnyexpert.sk",
      "https://www.akobytmiloinar.sk",
      "https://www.obmi.cz",
      "https://www.obmi.institute",
    ],
    template: "black and white",
  },
  {
    id: "kpk",
    title: "KPK Reklama",
    subtitle: "KPK Reklama – fyzický branding, ktorý zanechá dojem",
    description:
      "KPK Reklama zabezpečuje polepy predajní, výkladov, áut, svetelné boxy, 3D písmo a celoplošný vizuálny dizajn pre firmy po celom Slovensku.",
    bullets: [
      "polepy výkladov a vozidiel",
      "svetelné reklamy a 3D logá",
      "montáže na kľúč",
    ],
    links: [
      "https://www.kpkprint.sk",
      "https://www.kpkprint.hu",
      "https://www.kpkprint.de",
      "https://www.ledbox.sk",
      "https://www.safetyfloor.sk",
      "https://www.kreativnetapety.sk",
    ],
    tags: ["branding", "production", "installations"],
    template: "vintage",
  },
  {
    id: "razdva",
    title: "Razdva",
    subtitle: "Razdva – marketing, ktorý má výkon",
    description:
      "Razdva je kreatívna a výkonná agentúra skupiny ANKL Cap. Zabezpečuje branding, PPC kampane, sociálne siete a e-commerce marketing pre firmy, startupy aj veľké značky.",
    bullets: [
      "výkonnostný marketing",
      "správa sociálnych sietí",
      "branding a stratégie",
    ],
    links: ["https://www.razdva.solutions"],
    tags: ["marketing", "creative", "performance"],
    template: "black and white",
  },
];

const heroTags = [
  ...new Set(companies.flatMap((company) => company.tags || [])),
];
---

<MainLayout
  title={`Home | ${SITE_TITLE}`}
  description={SITE_DESCRIPTION}
  className="w-full p-0"
>
  <HeroSection uniqueTags={heroTags} />

  <div class="px-4 md:px-6">
    <CompanySlider cards={companies} />

    <LatestSection
      title="Članky"
      accentColor="text-solar"
      description="Čerstvé správy ANKL cap"
      viewAllHref="/blogs"
      viewAllText="Pozrieť všetky správy"
      viewAllButtonWidth="165px"
    >
      {posts.map((blog) => <BlogCard blog={blog} />)}
    </LatestSection>


  </div>
</MainLayout>
